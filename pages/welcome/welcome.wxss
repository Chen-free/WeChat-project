.container{
  display: flex;/*设置了就成了盒子模型*/
  flex-direction: column;/*列*/
  align-items: center;
}
page{
    background-color: #b3d4db;
    height: 100%;
}
.user-image{
  width: 100rpx;
  height: 140rpx;
  margin-top: 160rpx;
}

.user-name{
  font-size:32rpx;
  font-weight: bold;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.moto-container{
